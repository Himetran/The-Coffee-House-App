<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDFDFD">

    <!-- ðŸ”¹ Sticky Header -->
    <LinearLayout
        android:id="@+id/stickyHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:orientation="horizontal"
        android:padding="8dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvCategorySticky"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ic_launcher_foreground"
            android:drawableEnd="@drawable/ic_launcher_foreground"
            android:padding="8dp"
            android:text="Danh má»¥c"
            android:textColor="#000" />

        <ImageButton
            android:id="@+id/btnSearchSticky"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Search"
            android:src="@drawable/ic_launcher_foreground" />
    </LinearLayout>

    <!-- ðŸ”¸ Ná»™i dung -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollViewContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/stickyHeader"
        android:fillViewport="true"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- âœ… Header cÅ© -->
            <include layout="@layout/header_home" />

            <!-- ðŸ”¹ Dá»‹ch vá»¥ -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerService"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:nestedScrollingEnabled="false"
                android:overScrollMode="never" />

            <!-- ðŸ”¹ Hot trend slider -->
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPagerHotTrend"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginBottom="16dp" />

            <!-- ðŸ”¹ TiÃªu Ä‘á» -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Sáº£n pháº©m ná»•i báº­t"
                android:textColor="#333"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- ðŸ”¹ Danh sÃ¡ch sáº£n pháº©m -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:overScrollMode="never"
                android:visibility="visible"
                tools:listitem="@layout/item_product" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- ðŸ”¸ Floating Cart Button -->
    <FrameLayout
        android:id="@+id/cartFloatingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp">

        <!-- Giá» hÃ ng -->
<!--        <ImageView-->
<!--            android:id="@+id/imgCart"-->
<!--            android:layout_width="56dp"-->
<!--            android:layout_height="56dp"-->
<!--            android:src="@drawable/cart"-->
<!--            android:background="@drawable/bg_circle_cart"-->
<!--            android:scaleType="centerInside"-->
<!--            android:padding="12dp"-->
<!--            android:elevation="6dp" />-->

        <!-- Badge Ä‘áº¿m sá»‘ -->
        <TextView
            android:id="@+id/tvCartCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="20dp"
            android:minHeight="20dp"
            android:layout_gravity="top|end"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:padding="2dp"
            android:gravity="center"
            android:background="@drawable/bg_count_badge"
            android:text="9"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="12sp"
            android:visibility="visible" />
    </FrameLayout>



</RelativeLayout>

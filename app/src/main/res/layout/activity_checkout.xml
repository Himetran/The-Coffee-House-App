<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 🧾 Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thanh Toán"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- 🧍 Thông tin khách hàng -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông tin nhận hàng"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#4CAF50"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/edtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Họ và tên"
            android:background="@drawable/bg_input"
            android:padding="12dp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/edtPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Số điện thoại"
            android:inputType="phone"
            android:background="@drawable/bg_input"
            android:padding="12dp"
            android:layout_marginBottom="8dp" />

        <!-- Địa chỉ nhận hàng -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chọn địa chỉ nhận hàng"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#4CAF50"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinnerSavedAddresses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bg_input"
            android:padding="12dp" />

        <!-- EditText để nhập địa chỉ mới nếu người dùng chọn "Nhập địa chỉ mới" -->
        <EditText
            android:id="@+id/edtNewAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập địa chỉ mới"
            android:background="@drawable/bg_input"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone" />


        <!-- 💳 Phương thức thanh toán -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phương thức thanh toán"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#4CAF50"
            android:layout_marginBottom="8dp" />

        <RadioGroup
            android:id="@+id/radioPaymentMethod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radioCOD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thanh toán khi nhận hàng"
                android:checked="true"
                android:textColor="#333"
                android:layout_marginBottom="4dp" />

            <RadioButton
                android:id="@+id/radioOnline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chuyển khoản ngân hàng / Momo / ZaloPay"
                android:textColor="#333" />
        </RadioGroup>

        <!-- 🛒 Danh sách sản phẩm -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sản phẩm đã chọn"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#4CAF50"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerOrderItems"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false" />

        <!-- 💰 Tổng tiền -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="end">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng tiền: "
                android:textSize="18sp"
                android:textColor="#000" />

            <TextView
                android:id="@+id/tvTotalAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0đ"
                android:textSize="18sp"
                android:textColor="#E53935"
                android:textStyle="bold"
                android:layout_marginLeft="8dp" />
        </LinearLayout>

        <!-- 🧾 Nút Đặt hàng -->
        <Button
            android:id="@+id/btnPlaceOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đặt hàng"
            android:textAllCaps="false"
            android:layout_marginTop="24dp"
            android:backgroundTint="#4CAF50"
            android:textColor="#fff"
            android:padding="12dp" />
    </LinearLayout>
</ScrollView>
